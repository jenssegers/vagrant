{
    "run_list": [
        "apt",
        "git",
        "apache2",
        "apache2::mod_php5fpm",
        "apache2::mod_rewrite",
        "apache2::mod_ssl",
        "mysql::client",
        "mysql::server",
        "database::mysql",
        "redis2",
        "php",
        "php::module_mcrypt",
        "php::module_mysql",
        "php::module_sqlite3",
        "php::module_pgsql",
        "php::module_memcache",
        "php::module_apc",
        "php::module_curl",
        "php::module_gd",
        "php::module_igbinary",
        "php::module_redis",
        "php::module_intl",
        "composer",
        "composer::self_update",
        "beanstalkd",
        "nodejs",
        "blackfire",
        "mongodb::mongodb_org_repo",
        "mongodb",
        "tools::bower",
        "tools::grunt",
        "tools::gulp",
        "tools::phpunit",
        "tools::oh-my-zsh",
        "custom"
    ],
    "php": {
        "conf_dir": "/etc/php5/fpm",
        "ext_conf_dir": "/etc/php5/fpm/conf.d",
        "directives": {
            "display_errors": "On",
            "display_startup_errors": "On",
            "default_charset": "utf-8",
            "opcache.enable": "Off",
            "apc.cache_by_default": "Off"
        }
    },
    "mysql": {
        "server_root_password": "",
        "allow_remote_root": true
    },
    "mongodb": {
        "config": {
            "smallfiles": true
        }
    },
    "blackfire": {
        "agent": {
            "server-id": "",
            "server-token": ""
        }
    }
}
